<h1>List of users</h1>

<form action="/insert_user" method="post">
  <label for="new_user">Username</label>
  <input type="text" placeholder="Enter a username..." id="new_user" name="new_user">
  <button>Add user</button>
</form>

<hr>
<table border="1">
  <tr>
    <th>
      ID
    </th>

     <th>
      username
    </th>

     <th>
      
    </th>
  
  </tr>

  <% @list_of_users.each do |a_user| %>
    <tr>
      <td>
        <%= a_user.id %>
      </td>

       <td>
        <%= a_user.username %>
      </td>

       <td>
        <a href="/users/<%= a_user.username %>">Show details</a>
      </td>
    
    </tr>
  <% end %>
</table>
