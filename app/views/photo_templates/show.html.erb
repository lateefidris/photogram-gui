<h1>Photo Details</h1>

<dl>
  <dt>Image</dt>
  <dd>
    <img src="<%= @photo.image %>">
  </dd>

  <dt>Caption</dt>
  <dd>
    <%= @photo.caption %>
  </dd>

  <dt>Owner</dt>
  <dd>
    <%= @photo.poster.username %>
  </dd>

  <dt>Posted</dt>
  <dd>
    <%= @photo.created_at %>
  </dd>

  <dt>Edit Photo</dt>
  <dd>
    <form action="/update_photo/<%= @photo.id %>" method="post">
      <label for="picture">Image</label>
      <input id="picture" type="text" name="pic" value="<%= @photo.image %>">

      <label for="caption">Caption</label>
      <textarea name="cap" id="caption"><%= @photo.caption %></textarea>

      <button>Update photo</button>

    </form>
  </dd>

  <dt>Delete Photo</dt>
  <dd>
    <a href="/delete_photo/<%= @photo.id %>">
    Delete Photo
    </a>
  </dd>
</dl>

<h2>Comments</h2>

<table border="1">
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
<% @comments.each do |comment|%>
  <tr>
    <td><%= comment.commenter.username %></td>
    <td><%= comment.body %></td>
    <td><%= comment.created_at %></td>
  </tr>
<% end %>
</table>

<h3>Add a new comment</h3>

<form action="/new_comment" method="post">
  <label for="pic_id">Photo ID</label>
  <input type="text" id="pic_id" name="pic_id" value="<%= @photo.id %>">

  <label for="author_id">Author ID</label>
  <input type="text" id="author_id" name="author_id" placeholder="Enter your author ID">

  <label for="new_text">Comment</label>
  <textarea id="new_text" name="new_text" placeholder="Enter a comment..."></textarea>

  <button>Add comment</button>
</form>
