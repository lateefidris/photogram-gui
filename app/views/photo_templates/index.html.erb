<h1>List of Photos</h1>
<hr>
<form action="/insert_photo" method="post">
  <label for="image">Image</label>
  <input type="text" id="image" name="image">

  <label for="caption">Caption</label>
  <textarea id="caption" name="caption"></textarea>

  <label for="id">Owner ID</label>
  <input type="text" id="id" name="input_id">

  <button>Add photo</button>
</form>
<hr>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>
  <% @list_of_photos.each do |photo| %>
  <tr>
    <td><img src="<%= photo.image %>"></td>
    <td><%= photo.caption %></td>
    <td><%= photo.poster.username %></td>
    <td><%= photo.created_at %></td>
    <td><a href="/photos/<%= photo.id %>">Show details</a></td>
  
  </tr>
  <% end %>
</table>
